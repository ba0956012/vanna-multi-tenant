{
  "family": "vanna-agent",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/VannaECSTaskRole",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "vanna-agent",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.ap-northeast-1.amazonaws.com/vanna-agent:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8101,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-northeast-1"
        },
        {
          "name": "DYNAMODB_TABLE_NAME",
          "value": "vanna-agents"
        },
        {
          "name": "USE_CONNECTION_POOL",
          "value": "true"
        },
        {
          "name": "DB_POOL_MIN_CONN",
          "value": "2"
        },
        {
          "name": "DB_POOL_MAX_CONN",
          "value": "10"
        },
        {
          "name": "AZURE_OPENAI_DEPLOYMENT_NAME",
          "value": "gpt-4"
        },
        {
          "name": "AZURE_OPENAI_API_KEY",
          "value": "YOUR_AZURE_API_KEY"
        },
        {
          "name": "AZURE_OPENAI_API_VERSION",
          "value": "2025-01-01-preview"
        },
        {
          "name": "AZURE_OPENAI_ENDPOINT",
          "value": "https://your-endpoint.openai.azure.com/"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "agent-data-efs",
          "containerPath": "/app/agent_data",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/vanna-agent",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "agent"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8101/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "volumes": [
    {
      "name": "agent-data-efs",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-YOUR_EFS_ID",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "iam": "DISABLED"
        }
      }
    }
  ]
}
